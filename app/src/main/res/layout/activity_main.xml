<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Chronometer
        android:id="@+id/cronometro"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:textSize="80sp"
        android:textColor="@color/gray"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
         />

    <Button
        android:id="@+id/iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/cronometro"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/pausar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pausar"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/iniciar"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/zerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Zerar "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/pausar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_TempoVida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"

        android:text="Tempo é Vida"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_SemModeracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="0dp"
        android:text="Aprecie sem moderação"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="21sp"
        android:textStyle="bold" />


</RelativeLayout>